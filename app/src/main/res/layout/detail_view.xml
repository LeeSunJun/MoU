        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#FF000000"/>

    </LinearLayout>

    <LinearLayout
